{% extends 'base.html.twig' %}

{% block title %}Connexion - Click & Sport{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/home.css">
    <style>
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #2e4857 0%, #7ecfc2 100%);
            padding: 20px;
        }
        
        .login-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            padding: 40px;
            width: 100%;
            max-width: 400px;
            text-align: center;
        }
        
        .login-header {
            margin-bottom: 30px;
        }
        
        .login-header h1 {
            color: #22313f;
            font-size: 2em;
            margin-bottom: 10px;
            font-weight: bold;
        }
        
        .login-header p {
            color: #666;
            font-size: 1.1em;
        }
        
        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #22313f;
            font-weight: 500;
            font-size: 1em;
        }
        
        .form-group input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1em;
            transition: border-color 0.3s ease;
            box-sizing: border-box;
        }
        
        .form-group input:focus {
            outline: none;
            border-color: #7ecfc2;
        }
        
        .error-message {
            background: #ffebee;
            color: #c62828;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 0.9em;
        }
        
        .login-btn {
            width: 100%;
            background: linear-gradient(90deg, #2e4857 0%, #7ecfc2 100%);
            color: white;
            border: none;
            padding: 14px;
            border-radius: 10px;
            font-size: 1.1em;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s ease;
            margin-bottom: 20px;
        }
        
        .login-btn:hover {
            transform: translateY(-2px);
        }
        
        .login-footer {
            color: #666;
            font-size: 0.9em;
        }
        
        .login-footer a {
            color: #7ecfc2;
            text-decoration: none;
            font-weight: 500;
        }
        
        .login-footer a:hover {
            text-decoration: underline;
        }
        
        .back-home {
            position: absolute;
            top: 20px;
            left: 20px;
            color: white;
            text-decoration: none;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .back-home:hover {
            color: #7ecfc2;
        }
        
        @media (max-width: 480px) {
            .login-card {
                padding: 30px 20px;
                margin: 10px;
            }
            
            .login-header h1 {
                font-size: 1.6em;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <a href="{{ path('app_home') }}" class="back-home">
        ← Retour à l'accueil
    </a>
    
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h1>Connexion</h1>
                <p>Connectez-vous à votre compte Click & Sport</p>
            </div>
            
            {% if error %}
                <div class="error-message">
                    {% if error.messageKey == 'Invalid credentials.' %}
                        Email ou mot de passe incorrect.
                    {% else %}
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    {% endif %}
                </div>
            {% endif %}
            
            <form method="post" action="{{ path('app_login') }}">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="_username" value="{{ last_username }}" required autofocus>
                </div>
                
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="_password" required>
                </div>
                
                <button type="submit" class="login-btn">
                    Se connecter
                </button>
            </form>
            
            <div class="login-footer">
                <p>Pas encore de compte ? <a href="{{ path('app_register') }}">Créer un compte</a></p>
                <p><a href="#">Mot de passe oublié ?</a></p>
            </div>
        </div>
    </div>
{% endblock %} 