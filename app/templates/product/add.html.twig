{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit - Click & Sport{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/home.css">
    <style>
        .product-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #2e4857 0%, #7ecfc2 100%);
            padding: 20px;
        }
        
        .product-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            padding: 40px;
            width: 100%;
            max-width: 600px;
            text-align: center;
        }
        
        .product-header {
            margin-bottom: 30px;
        }
        
        .product-header h1 {
            color: #22313f;
            font-size: 2em;
            margin-bottom: 10px;
            font-weight: bold;
        }
        
        .product-header p {
            color: #666;
            font-size: 1.1em;
        }
        
        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #22313f;
            font-weight: 500;
            font-size: 1em;
        }
        
        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1em;
            transition: border-color 0.3s ease;
            box-sizing: border-box;
            font-family: inherit;
        }
        
        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #7ecfc2;
        }
        
        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }
        
        .form-error {
            color: #c62828;
            font-size: 0.85em;
            margin-top: 5px;
            display: block;
        }
        
        .product-btn {
            width: 100%;
            background: linear-gradient(90deg, #2e4857 0%, #7ecfc2 100%);
            color: white;
            border: none;
            padding: 14px;
            border-radius: 10px;
            font-size: 1.1em;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s ease;
            margin-bottom: 20px;
        }
        
        .product-btn:hover {
            transform: translateY(-2px);
        }
        
        .back-home {
            position: absolute;
            top: 20px;
            left: 20px;
            color: white;
            text-decoration: none;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .back-home:hover {
            color: #7ecfc2;
        }
        
        .flash-messages {
            margin-bottom: 20px;
        }
        
        .flash-message {
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 10px;
            font-size: 0.9em;
        }
        
        .flash-success {
            background: #e8f5e8;
            color: #2e7d32;
            border: 1px solid #c8e6c9;
        }
        
        .flash-error {
            background: #ffebee;
            color: #c62828;
            border: 1px solid #ffcdd2;
        }
        
        @media (max-width: 480px) {
            .product-card {
                padding: 30px 20px;
                margin: 10px;
            }
            
            .product-header h1 {
                font-size: 1.6em;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <a href="{{ path('app_home') }}" class="back-home">
        ← Retour à l'accueil
    </a>
    
    <div class="product-container">
        <div class="product-card">
            <div class="product-header">
                <h1>Ajouter un produit</h1>
                <p>Remplissez les informations pour ajouter un nouveau produit</p>
            </div>
            
            {% for message in app.flashes('success') %}
                <div class="flash-messages">
                    <div class="flash-message flash-success">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="flash-messages">
                    <div class="flash-message flash-error">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
            
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price) }}
                    {{ form_errors(form.price) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.notice) }}
                    {{ form_widget(form.notice) }}
                    {{ form_errors(form.notice) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.pictures) }}
                    <div class="images-collection">
                        {% for picture in form.pictures %}
                            <div class="image-item">
                                {{ form_widget(picture) }}
                                <button type="button" class="btn btn-danger btn-sm remove-image">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </div>
                        {% endfor %}
                    </div>
                
                <button type="submit" class="product-btn">
                    Ajouter le produit
                </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 