{% extends 'base.html.twig' %}

{% block title %}Nos Produits - Click & Sport{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/product-list.css') }}">
{% endblock %}

{% block body %}
    <div class="products-container">
        <header class="products-header">
            <h1>Nos Produits</h1>
            <p>D√©couvrez notre s√©lection d'√©quipements pour tous les sportifs.</p>
        </header>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="admin-actions-header">
                <a href="{{ path('app_product_add') }}" class="add-product-btn">
                    ‚ûï Ajouter un nouveau produit
                </a>
            </div>
        {% endif %}

        {% if products is empty %}
            <div class="no-products">
                <h3>Aucun produit √† afficher</h3>
                <p>Le catalogue est actuellement vide. Revenez bient√¥t !</p>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_product_add') }}" class="add-product-btn">
                        Cr√©er le premier produit
                    </a>
                {% endif %}
            </div>
        {% else %}
            <div class="products-grid">
                {% for product in products %}
                    <article class="product-card">
                        <div class="product-image-container">
                            <a href="#"> {# Lien vers la page d√©tail du produit #}
                                {% if product.pictures is not empty %}
                                    <img src="{{ asset(product.pictures.first.path) }}" alt="{{ product.title }}" class="product-image">
                                {% else %}
                                    <div class="product-image-placeholder">
                                        <span>üì∑</span>
                                    </div>
                                {% endif %}
                            </a>
                        </div>
                        
                        <div class="product-info">
                            {% if product.categories %}
                                <span class="product-category">{{ product.categories.title }}</span>
                            {% endif %}
                            <h3 class="product-title">
                                <a href="#">{{ product.title }}</a>
                            </h3>
                            <p class="product-description">{{ product.description|slice(0, 80) ~ '...' }}</p>
                            <div class="product-price">{{ product.price|number_format(2, ',', ' ') }} ‚Ç¨</div>
                        </div>

                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="product-admin-actions">
                                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="edit-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                      <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V12h2.293L12.793 5.5z"/>
                                    </svg>
                                    Modifier
                                </a>
                                <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce produit ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                    <button type="submit" class="delete-btn">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                          <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                          <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                        </svg>
                                        Supprimer
                                    </button>
                                </form>
                            </div>
                        {% endif %}
                    </article>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %} 