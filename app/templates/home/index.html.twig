{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/home.css">
{% endblock %}

{% block body %}
<header class="main-header">
    <nav class="navbar">
        <div class="logo-container">
            <img src="{{asset('images/logo_simple.png')}}" alt="Logo Click Sport" class="logo">
        </div>
        <button class="burger" id="burger-menu" aria-label="Ouvrir le menu" aria-expanded="false" aria-controls="nav-links">
            <span></span>
            <span></span>
            <span></span>
        </button>
        <ul class="nav-links" id="nav-links">
            <li><a href="#" class="active">Accueil</a></li>
            <li><a href="#categories">Catégories</a></li>
            <li><a href="#articles">Articles</a></li>
            <li><a href="#contact">Contact</a></li>
            {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                <li><a href="{{ path('app_product_add') }}" class="admin-link">Ajouter un produit</a></li>
            {% endif %}
            {% if app.user %}
                <li><a href="{{ path('app_logout') }}" class="logout-link">Déconnexion</a></li>
            {% else %}
                <li><a href="{{ path('app_login') }}" class="login-link">Connectez-vous</a></li>
            {% endif %}
        </ul>
    </nav>
    <div class="hero-section">
        <h1>Bienvenue sur Click Sport</h1>
        {% if app.user %}
            <p>Bonjour {{ app.user.firstname }} {{ app.user.name }} ! Tout votre équipement sportif au meilleur prix !</p>
        {% else %}
            <p>Tout votre équipement sportif au meilleur prix !</p>
        {% endif %}
    </div>
</header>

<main>
    <section id="categories" class="categories-section">
        <h2>Nos Catégories</h2>
        <div class="categories">
            <div class="category-card">
                <img src="/images/football.png" alt="Football">
                <span>Football</span>
            </div>
            <div class="category-card">
                <img src="/images/BasketBall.png" alt="Basketball">
                <span>Basketball</span>
            </div>
            <div class="category-card">
                <img src="/images/golf.png" alt="Golf">
                <span>Golf</span>
            </div>
            <div class="category-card">
                <img src="/images/Tennis.png" alt="Tennis">
                <span>Tennis</span>
            </div>
        </div>
    </section>
</main>

<footer class="footer">
    <div class="footer-content">
        <div class="socials">
            <a href="#"><img src="/svg/facebook.svg" alt="Facebook"></a>
            <a href="#"><img src="/svg/instagram.svg" alt="Instagram"></a>
            <a href="#"><img src="/svg/twitter.svg" alt="Twitter"></a>
        </div>
        <div class="legal">&copy; 2024 Click Sport - Tous droits réservés</div>
    </div>
</footer>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const burger = document.getElementById('burger-menu');
    const navLinks = document.getElementById('nav-links');
    burger.addEventListener('click', function() {
        burger.classList.toggle('open');
        navLinks.classList.toggle('open');
        const expanded = burger.getAttribute('aria-expanded') === 'true';
        burger.setAttribute('aria-expanded', !expanded);
    });
});
</script>
{% endblock %}
